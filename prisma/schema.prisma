generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  SHOP
}

enum SubscriptionStatus {
  trialing
  active
  expired
  cancelled
}

enum VerificationMode {
  SCREENSHOT
  SMS
  RAZORPAY
}

enum ScanStatus {
  pending
  success
  rejected
  manual_review
}



model User {
  srNo      Int      @id @default(autoincrement())      // Primary key
  email     String   @unique
  password  String
  name     String
  role      Role     @default(SHOP)
  createdAt DateTime @default(now())

  shops Shop[]
}

model Shop {
  srNo           Int      @id @default(autoincrement())
  id             String   @unique
  ownerId        String
  shopName       String
  businessType   String?
  address        String?
  phone          String?
  minAmount      String?
  plan           String   @default("basic")
  isActive       Boolean  @default(true)
  loyaltyEnabled Boolean  @default(true)
  targetStamps   String
  reward         String   @default("Free Reward")
  createdAt      DateTime @default(now())

  // üîê NEW FIELDS FOR SECURE SCANNER
  upiId                         String?            // UPI where payments come
  verificationMode              VerificationMode   @default(SCREENSHOT)
  maxStampsPerCustomerPerDay    Int?               @default(1)

  owner         User           @relation(fields: [ownerId], references: [email])
  customers     Customer[]
  transactions  Transaction[]
  rewards       Reward[]
  subscriptions Subscription[]
  payments      Payment[]
  scanVerifications ScanVerification[]    
}


model Customer {
  srNo        Int       @id @default(autoincrement())
  id          String    @unique
  shopId      String
  name        String?
  phone       String?   @unique
  upiId       String?
  stampCount  Int       @default(0)
  totalVisits Int       @default(0)
  lastVisit   DateTime?
  createdAt   DateTime  @default(now())

  shop         Shop           @relation(fields: [shopId], references: [id])
  transactions Transaction[]
  rewards      Reward[]
}


model ScanVerification {
  srNo           Int        @id @default(autoincrement())
  id             String     @unique @default(cuid())

  shopId         String
  customerId     String?

  // Parsed from OCR
  amount         Int?        // store in paise or rupees (decide and stay consistent)
  currency       String     @default("INR")
  upiId          String?
  utr            String?
  paidAt         DateTime
  status         ScanStatus @default(pending)
  rejectReason   String?
  riskScore      Int        @default(0)

  // Security features
  screenshotHash String     // sha256(image)
  appDetected    String
  ocrText        String   @db.LongText    // full OCR text dump
  meta           Json?      // optional extra parsed info (raw JSON)
  imagePath      String?    // if you store in S3 or similar
  checksum       String?

  verifiedAt     DateTime?
  createdAt      DateTime   @default(now())

  shop           Shop?       @relation(fields: [shopId], references: [id])

  @@index([shopId, utr])
  @@index([customerId])
  @@index([screenshotHash])
}


model Otp {
  email      String   @id
  code       String
  purpose    String
  expiresAt  DateTime
}


model Transaction {
  srNo       Int       @id @default(autoincrement())
  id         String    @unique
  shopId     String
  customerId String?
  amount     Float?
  status     String
  upiId      String?
  paymentId  String?
  method     String?
  createdAt  DateTime  @default(now())

  shop     Shop      @relation(fields: [shopId], references: [id])
  customer Customer? @relation(fields: [customerId], references: [phone])
}

model Reward {
  srNo       Int       @id @default(autoincrement())
  id         String    @unique
  shopId     String
  customerId String
  rewardText String
  redeemed   Boolean   @default(false)
  createdAt  DateTime  @default(now())

  shop     Shop     @relation(fields: [shopId], references: [id])
  customer Customer @relation(fields: [customerId], references: [id])
}

model Plan {
  srNo        Int       @id @default(autoincrement())
  id          String    @unique
  name        String
  price       Int
  stampLimit  Int?
  shopLimit   Int?
  description String?
  createdAt   DateTime @default(now())


}

model Subscription {
  srNo          Int       @id @default(autoincrement())
  id            String    @unique
  shopId        String
  planId        String?
  amount        Int
  status SubscriptionStatus @default(trialing)
  startDate     DateTime  @default(now())
  endDate       DateTime?
  trialEndsAt    DateTime  
  nextBillingAt  DateTime    
  razorpaySubId String?
  updatedAt     DateTime @updatedAt

  shop Shop? @relation(fields: [shopId], references: [id])
  payments Payment[]

}




model Payment {
  srNo              Int      @id @default(autoincrement())
  id                String   @unique @default(cuid())
  
  shopId            String
  subscriptionId    String?
  
  amount            Int
  currency          String   @default("INR")

  razorpayOrderId   String?
  razorpayPaymentId String?
  razorpaySignature String?

  status            String   // success, failed, pending, refunded

  method            String?  // UPI, Card, Wallet
  
  createdAt         DateTime @default(now())

  shop          Shop          @relation(fields: [shopId], references: [id])
  subscription  Subscription? @relation(fields: [subscriptionId], references: [id])
}

